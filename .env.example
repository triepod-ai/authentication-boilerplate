# Flask Configuration
FLASK_APP=backend/app_example.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production

# Database
DATABASE_URI=sqlite:///auth.db
# For PostgreSQL: postgresql://user:password@localhost:5432/auth_db
# For MySQL: mysql://user:password@localhost:3306/auth_db

# JWT Authentication
JWT_SECRET=your-jwt-secret-change-in-production
TOKEN_EXPIRY_SECONDS=604800  # 7 days

# Admin Session
ADMIN_SESSION_EXPIRY_SECONDS=86400  # 24 hours

# Multi-tenant (optional)
MULTI_TENANT_ENABLED=false

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Server
PORT=5000
HOST=0.0.0.0
DEBUG=true
